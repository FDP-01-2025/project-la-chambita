{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Compilar MiJuego",
            "type": "shell",
            "command": "g++",
            "args": [
                "main.cpp",
                "-o",
                "MiJuego.exe",
                "-I", "C:/Users/aaron/Desktop/raylib/install/include",
                "-L", "C:/Users/aaron/Desktop/raylib/install/lib",
                "-lraylib",
                "-lopengl32",
                "-lgdi32",
                "-lwinmm"
